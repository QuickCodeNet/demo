@model RegisterData
@{
var queryCollection = Context.Request.Query;
var routeData = new Dictionary<string, string>(queryCollection.Select(x => new KeyValuePair<string, string>(x.Key, x.Value!)));
}
<div class="row">
    <div class="col-lg-6 d-lg-block position-relative">
        <div class="d-flex flex-column h-100">
            <div class="flex-grow-1">
                <img src="/images/login_image.jpg" alt="Login Background" class="img-fluid w-100 h-100" style="object-fit: cover;" />
            </div>
            <div class="text-center p-1" style="background-color: #3b488e;">
                <img src="/images/logo_s1.png" alt="Logo" class="img-fluid" style="max-height: 60px;" />
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="p-5">
            <div class="text-center mb-4">
                <h1 class="h4 text-gray-900">Create an Account!</h1>
                <p class="text-muted">Create your new account</p>
            </div>
            <form class="user" asp-action="Register" asp-all-route-data="routeData">
                <div class="form-group">
                    <input type="text" asp-for="FirstName" class="form-control form-control-user" placeholder="First Name" />
                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                </div>
                <div class="form-group">
                    <input type="text" asp-for="LastName" class="form-control form-control-user" placeholder="Last Name" />
                    <span asp-validation-for="LastName" class="text-danger small"></span>
                </div>
                <div class="form-group">
                    <input type="email" asp-for="Email" class="form-control form-control-user" placeholder="Email Address" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="form-group">
                    <input type="password" asp-for="Password" class="form-control form-control-user" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="form-group">
                    <input type="password" asp-for="ConfirmPassword" class="form-control form-control-user" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-user btn-block">
                        Register Account
                    </button>
                </div>
            
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                     <br />
                    <div class="text-center">
                        <h1 class="h6 text-red-900 mt-1" style="color: red">@Model.ErrorMessage</h1>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                     <br />
                    <div class="text-center">
                        <h1 class="h6 text-green-900 mt-1" style="color: green">@Model.SuccessMessage</h1>
                    </div>
                }
        
      
            </form>
            <hr>
            <div class="text-center">
                <a class="small" asp-action="Index" asp-controller="Login">Already have an account? Login!</a>
            </div>
            <div class="text-center">
                <a class="small" asp-action="ForgotPassword" asp-controller="Login">Forgot Password?</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
